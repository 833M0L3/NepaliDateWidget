<UserControl x:Class="WhereIsMyData.Views.DataUsageSummaryV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WhereIsMyData.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:Converters x:Key="converter"/>
    </UserControl.Resources>
    <Grid>
        <Grid Grid.Row="1" Background="#f1f1f1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Border Margin="25 25 25 25" Background="White" CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" Color="#dddddd" Opacity="0.4" Direction="280" ShadowDepth="0" />
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.ColumnSpan="5"  Text="Current session data usage" VerticalAlignment="Center" Foreground="#717171" Margin="10 0 0 0" />
                        <Label Grid.Row="1" FontSize="15" x:Name="downloadData" HorizontalAlignment="Right" VerticalAlignment="Center" Content="{Binding CurrentSessionDownloadData }"></Label>
                        <Label Grid.Column="1" Grid.Row="1" Margin="10,0,0,0" FontSize="15" x:Name="downloadDataSuffix" HorizontalAlignment="Left" VerticalAlignment="Center" Content="{Binding SuffixOfDownloadData, Converter={StaticResource converter}}" ></Label>
                        <Label Grid.Column="2" Grid.Row="1" FontSize="15" x:Name="uploadData" HorizontalAlignment="Right" VerticalAlignment="Center" Content="{Binding CurrentSessionUploadData }"></Label>
                        <Label Grid.Column="3" Grid.Row="1" Margin="10,0,0,0" FontSize="15" x:Name="uploadDataSuffix" HorizontalAlignment="Left" VerticalAlignment="Center" Content="{Binding SuffixOfUploadData, Converter={StaticResource converter}}" ></Label>
                    </Grid>

                </Border>

                <Border Grid.Column="2" Margin="25 25 25 25" Background="White" CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" Color="#dddddd" Opacity="0.4" Direction="280" ShadowDepth="0" />
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Total data usage" VerticalAlignment="Center" Foreground="#717171" Margin="10 0 0 0"/>
                        <TextBlock Text="11 GB" Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center" Margin="10 0 10 0" FontSize="30"/>
                    </Grid>

                </Border>
                
            </Grid>
            
            
        </Grid>
        <!--<Grid>
            <TextBlock Text="Data Usage Summary"/>
            <Label x:Name="label" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Seconds }"></Label>
        </Grid>-->
        
    </Grid>
</UserControl>
