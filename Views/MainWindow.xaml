<Window x:Class="WhereIsMyData.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:WhereIsMyData.Views" 
        xmlns:vm="clr-namespace:WhereIsMyData.ViewModels"
        mc:Ignorable="d"
        Title="WhereIsMyData" Height="450" Width="800">
    <Window.Resources>

        <DataTemplate DataType="{x:Type vm:DataUsageSummaryVM}">

            <v:DataUsageSummaryV/>

        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DataUsageDetailedVM}">

            <v:DataUsageDetailedV/>

        </DataTemplate>

    </Window.Resources>

    <DockPanel LastChildFill="True">

        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="500"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="WhereIsMyData" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" Foreground="#4F5050" Margin="20 0 0 0"/>

            <UniformGrid Columns="4" Grid.Column="1">
                <Button Background="White" BorderThickness="0" Command="{Binding DataUsageSumCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xe602;" FontSize="18" FontFamily="Fonts/#iconfont" VerticalAlignment="Center"/>
                        <TextBlock Text="Summary" Margin="10 0 0 0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Background="White" BorderThickness="0" Command="{Binding DataUsageDetCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xe647;" FontSize="18" FontFamily="Fonts/#iconfont" VerticalAlignment="Center"/>
                        <TextBlock Text="Detailed" Margin="10 0 0 0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </UniformGrid>

        </Grid>
        
        <!--<StackPanel x:Name="navigation" DockPanel.Dock="Top" Orientation="Horizontal" Height="35">

            <Button Content=" Data Usage Summary " Command="{Binding DataUsageSumCommand}"></Button>

            <Button Content=" Data Usage Detailed " Command="{Binding DataUsageDetCommand}"></Button>

        </StackPanel>-->

        <ContentControl x:Name="Pages" DockPanel.Dock="Bottom" Content="{Binding SelectedViewModel}"/>

    </DockPanel>

</Window>
