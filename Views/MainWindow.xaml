<Window x:Class="WhereIsMyData.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:WhereIsMyData.Views" 
        xmlns:vm="clr-namespace:WhereIsMyData.ViewModels"
        mc:Ignorable="d"
        Title="WhereIsMyData" Height="450" Width="800">
    <Window.Resources>

        <DataTemplate DataType="{x:Type vm:DataUsageSummaryVM}">

            <v:DataUsageSummaryV/>

        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DataUsageDetailedVM}">

            <v:DataUsageDetailedV/>

        </DataTemplate>

    </Window.Resources>

    <DockPanel LastChildFill="True">

        <StackPanel x:Name="navigation" DockPanel.Dock="Top" Orientation="Horizontal" Height="35">

            <Button Content=" Data Usage Summary " Command="{Binding DataUsageSumCommand}"></Button>

            <Button Content=" Data Usage Detailed " Command="{Binding DataUsageDetCommand}"></Button>

        </StackPanel>

        <ContentControl x:Name="Pages" DockPanel.Dock="Bottom" Content="{Binding SelectedViewModel}"/>

    </DockPanel>

</Window>
