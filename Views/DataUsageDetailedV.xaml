<UserControl x:Class="WhereIsMyData.Views.DataUsageDetailedV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WhereIsMyData.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox x:Name="AllAppsData" Margin="128,64,165,64" ItemsSource="{Binding MyApps}">
            <ListBox.ItemTemplate>
				<DataTemplate>
					<Grid Margin="0,2">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<TextBlock Text="{Binding Key}" Grid.Column="0"/>
						<TextBlock Text="{Binding Value.DataRecv}" Grid.Column="1"/>
						
					</Grid>
				</DataTemplate>
			</ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
