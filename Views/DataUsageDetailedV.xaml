<UserControl x:Class="WhereIsMyData.Views.DataUsageDetailedV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WhereIsMyData.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#f1f1f1">
        <ListView x:Name="AllAppsData" Margin="64,32,64,32" ItemsSource="{Binding MyApps}">
            <ListView.ItemTemplate>
				<DataTemplate>
					<Grid Margin="0,2">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="40" />
							<ColumnDefinition Width="200" />
							<ColumnDefinition Width="200" />
						</Grid.ColumnDefinitions>
                        <Image Source="{Binding Value.Icon}" Width ="32" Height="32" Grid.Column="0"/>
                        <TextBlock Text="{Binding Key}" Grid.Column="1" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Value.DataRecv}" VerticalAlignment="Center" Grid.Column="2"/>
                    </Grid>
				</DataTemplate>
			</ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
